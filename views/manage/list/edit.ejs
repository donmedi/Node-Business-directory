<div class="container">

    <form method="post" action="/manage/list/edit/<%= list.id %>" >
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" value="<%= list.name %>" >
        </div>
        <div class="form-group">
             <label for="description">description</label>
            <textarea  class="col-sm-12" name="description"><%= list.description %></textarea> 
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" class="form-control" name="address" value="<%= list.address %>">
        </div>
        <div class="form-group">
            <label for="email">email</label>
            <input type="text" class="form-control" name="contact_email" value="<%= list.contact_email %>" >
        </div>
        <div class="form-group">
            <label for="phone">phone</label>
            <input type="text" class="form-control" name="phone" value="<%= list.phone %>" >
        </div>
        <div class="form-group">
            <label for="website">website</label>
            <input type="text" class="form-control" name="website_url" value="<%= list.website_url %>" >
        </div>

         <% categories.forEach((item) => { %>
          <div class="form-group form-check">
            <input type="checkbox" class="form-check-input" name="category" value="<%= item.name %>" >
            <label class="form-check-label" ><%= item.name %></label>
          </div>
         <% }) %>
        
        <button type="submit" class="btn btn-primary">update</button>

    </form>
</div>